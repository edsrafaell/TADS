Algoritmo "exercício 13"
Var
   horas, minutos: real

Inicio
     escreval("============================")
     escreval("  CONVERTER HORA > MINUTOS  ")
     escreval("============================")

     escreva("Digite a quantidade de horas: ")
     leia(horas)
     
     minutos <- horas * 60
     escreva(horas, " horas é ", minutos, " minutos")

Fimalgoritmo